{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/terms",
      "destination": "/terms.html"
    },
    {
      "source": "/privacy",
      "destination": "/privacy.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/fetch-trending?timeRange=daily",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/fetch-trending?timeRange=weekly",
      "schedule": "0 0 * * 0"
    }
  ]
}
